<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.IntroFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose difficulty"
        android:layout_centerInParent="true"
        android:textSize="40sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:weightSum="3"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/intro_BTN_easy"
            android:tag="intro_BTN_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:layout_weight="1"
            android:layout_margin="5dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/intro_BTN_hard"
            android:tag="intro_BTN_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard"
            android:layout_weight="1"
            android:layout_margin="5dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/intro_BTN_extreme"
            android:tag="intro_BTN_extreme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extreme"
            android:layout_weight="1"
            android:layout_margin="5dp"
            />
    </LinearLayout>


</RelativeLayout>